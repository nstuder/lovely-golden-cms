<div class="row align-items-center">
    <div class="col-md-4">
        {{> components/atoms/image image=father.fatherImage class="shadow mx-auto d-none d-md-block w-75"}}
        {{> components/atoms/image image=father.fatherImage class="shadow mx-auto d-block d-md-none w-100"}}
        <p class="fs-5 text-center">{{ father.name }}</p>
        <br />
