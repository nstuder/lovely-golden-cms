            <thead>
                <tr>
                    <th>Vater</th>
                    <th>Großeltern</th>
                    <th>Urgroßeltern</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="align-middle" rowspan="4">
                        {{ father.name }}
                    </td>
                    <td cfatherme="align-middle" rowspan="2">
                        {{ father.grandfather.name }}
                    </td>
                    <td>{{ father.grandfather.greatGrandparents.father }}</td>
                </tr>
                <tr>
                    <td>{{ father.grandfather.greatGrandparents.mother }}</td>
                </tr>
                <tr>
                    <td class="align-middle" rowspan="2">
                        {{ father.grandmother.name }}
                    </td>
                    <td>{{ father.grandmother.greatGrandparents.father }}</td>
                </tr>
                <tr>
                    <td>{{ father.grandmother.greatGrandparents.mother }}</td>
                </tr>
            </tbody>
            <thead>
                <tr>
                    <th>Mutter</th>
                    <th>Großeltern</th>
                    <th>Urgroßeltern</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="align-middle" rowspan="4">
                        {{ mother.name }}
                    </td>
                    <td class="align-middle" rowspan="2">
                        {{ mother.grandfather.name }}
                    </td>
                    <td>{{ mother.grandfather.greatGrandparents.father }}</td>
                </tr>
                <tr>
                    <td>{{ mother.grandfather.greatGrandparents.mother }}</td>
                </tr>
                <tr>
                    <td class="align-middle" rowspan="2">
                        {{ mother.grandmother.name }}
                    </td>
                    <td>{{ mother.grandmother.greatGrandparents.father }}</td>
                </tr>
                <tr>
                    <td>{{ mother.grandmother.greatGrandparents.mother }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
